# Example Environment Configuration
# Copy this file to .env and fill with your actual values
# NEVER commit .env with real credentials

# Server Configuration
SERVER_PORT=8080
SERVER_ENV=development
SERVER_LOG_LEVEL=debug
SERVER_ENABLE_HTTPS=false
SERVER_CERT_FILE=
SERVER_KEY_FILE=

# MongoDB Configuration
DB_MONGO_URI=mongodb://localhost:27017
DB_MONGO_DATABASE=portfolio_dev
DB_MONGO_TIMEOUT=10
DB_MONGO_MAX_POOL_SIZE=10
DB_MONGO_MIN_POOL_SIZE=2
DB_MONGO_MAX_IDLE_TIME=300
DB_MONGO_RETRY_READS=true

# Security Configuration
SECURITY_JWT_SECRET=your_jwt_secret_here_min_32_chars
SECURITY_SESSION_SECRET=your_session_secret_here_min_32_chars
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
SECURITY_RATE_LIMIT_RPS=100
SECURITY_ENABLE_RATE_LIMIT=true

# External Services
EXTERNAL_OPENAI_API_KEY=your_openai_api_key_here
EXTERNAL_OPENAI_MODEL=gpt-4